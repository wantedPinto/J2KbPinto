{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "prettier"
  ],
  "rules": {
    "no-param-reassign": [2, { "props": false }],
    "no-alert": "off",
    "no-console": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "react-hooks/exhaustive-deps": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.tsx"],
      "rules": {
        "react/jsx-props-no-spreading": 0
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
